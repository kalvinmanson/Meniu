<div class="container">

  <h1>Users</h1>

  <table class="table">
    <thead>
      <tr>
        <th>City</th>
        <th>Uid</th>
        <th>Provider</th>
        <th>Role</th>
        <th>Name</th>
        <th>Active</th>
        <th>Latitude</th>
        <th>Longitude</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.city.name %></td>
          <td><%= user.uid %></td>
          <td><%= user.provider %></td>
          <td><%= user.role %></td>
          <td><%= user.name %></td>
          <td><%= user.active %></td>
          <td><%= user.latitude %></td>
          <td><%= user.longitude %></td>
          <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
          <td><%= link_to 'Destroy', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>